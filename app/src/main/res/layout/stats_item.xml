<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        >
        <TextView
            android:id="@+id/stats_language_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stats_language"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            />
        <TextView
            android:id="@+id/stats_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="C++"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            />
    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/stats_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeColor="#808080"
        app:strokeWidth="1dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >
            <TextView
                android:id="@+id/stats_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Mithil Kiran Poojary"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/stats_card_submission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_submission_caption"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    />
                <TextView
                    android:id="@+id/stats_card_submission_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="31"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="#4CAF50"
                    />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>